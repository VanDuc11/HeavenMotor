<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    app:cardElevation="4dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



            <TextView
                android:id="@+id/item_list_dh_tvid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="mã đơn hàng"
                android:textStyle="bold"
               />

            <TextView
                android:id="@+id/item_list_dh_tvUser_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:text="user_name" />



            <TextView
                android:id="@+id/item_list_dh_tvmaXe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"

                android:text="mã xe + ten xe" />
            <TextView
                android:id="@+id/item_list_dh_tvLoai"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Loại xe" />
            <TextView
                android:id="@+id/item_list_dh_tvThoigian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="thời gian" />
            <TextView
                android:id="@+id/item_list_dh_tvPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="@color/red"
                android:text="Tổng tiền:" />

            <TextView
                android:id="@+id/item_list_dh_tvTT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Tình trạng"
                android:textStyle="italic"
                android:textColor="@color/red"/>

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>