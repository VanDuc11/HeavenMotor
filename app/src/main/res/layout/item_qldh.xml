<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    app:cardElevation="4dp"
    android:padding="50dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_qldh_tvid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="mã đơn hàng"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/item_qldh_tvUser_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:text="user_name" />

            <TextView
                android:id="@+id/item_qldh_tvmaXe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"

                android:text="mã xe + ten xe" />

            <TextView
                android:id="@+id/item_qldh_tvDiachi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"

                android:text="Địa chỉ" />

            <TextView
                android:id="@+id/item_qldh_tvThoigian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="thời gian" />

            <TextView
                android:id="@+id/item_qldh_tvtongtien"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="@color/red"
                android:text="Tổng tiền" />

            <TextView
                android:id="@+id/item_qldh_tvTT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Trạng thái: Đang xử lý"
                android:textColor="@color/red"
                android:textStyle="italic" />


        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>